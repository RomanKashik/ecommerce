extends ../templates/template-base

block styles
	link(rel="stylesheet" href="css/form.css")

block variables
	- var title = "Form"

block content
	section.form-block
		.container
			h1(class="form-block__title") Sign Up
			ul.form-block__errors.errors
				li.errors__item
			form.form(method="POST" action="#")
				label(for="name" class="form__label")
					input(type="text" name="name" required placeholder="Name" value="" id="name" class="form__input-elem")
				label(for="email" class="form__label")
					input(type="email" name="email" required placeholder="E-mail" value="" id="email" class="form__input-elem")
				label(for="password" class="form__label")
					input(type="password" name="password" required placeholder="Password" value="" id="password" class="form__input-elem")
				label(for="submit" class="form__label")
					input(type="submit"  value="Registration" id="submit" class="btn btn__form")

			h1(class="form-block__title") Sign In
			ul.form-block__errors.errors
