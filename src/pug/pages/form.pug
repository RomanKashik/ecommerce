				label(for="password" class="form__label")
					input(type="password" name="password" required placeholder="Password" value="" id="password" class="form__input-elem")
				label(for="submit" class="form__label")
					input(type="submit"  value="Save" id="submit" class="btn btn__form")

			h1(class="form-block__title") Checkout
			.form-block__info
				p.quantity Quantity :pcs
					span
